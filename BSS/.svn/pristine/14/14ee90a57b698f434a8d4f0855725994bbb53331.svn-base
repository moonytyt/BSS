<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>
<%@ taglib uri="http://www.springframework.org/tags" prefix="spring"%>
<%@ taglib uri="http://www.springframework.org/tags/form" prefix="form"%>
<style>
table {
	F width: 100%;
	border: 1px solid #444444;
	border-collapse: collapse;
	background-color: white;
}

th {
	text-align: center;
	width: 210px;
}

.text {
	width: 100%;
}

.form-control {
	padding: 0;
}

th, td {
	color: black;
	border: 1px solid #444444;
}
</style>

<form:form method="post" modelAttribute="employee"
	enctype="multipart/form-data">
	<table style="width: 90%; , background-color: white;">
		<tr>
			<th colspan="11"><h3>인 사 기 록 카 드</h3></th>
		</tr>
		<tr>
			<th class="title">사번</th>
			<td colspan="3"><form:input path="empCd" class="form-control"
					type="text" /> <form:errors path="empCd" class="errors" /></td>
			<th class="title">부서명</th>
			<td colspan="3"><form:select path="department.depCd"
					class="form-select">
					<form:option value="" label="부서선택" />
					<form:options items="${depList }" itemLabel="depName"
						itemValue="depCd" />
				</form:select> <form:errors path="department.depName" class="errors" /></td>
			<th class="title">직급</th>
			<td colspan="2"><form:select path="position.poCd"
					class="form-select">
					<form:option value="" label="직급선택" />
					<form:options items="${poList }" itemLabel="poName"
						itemValue="poCd" />
				</form:select> <form:errors path="position.poName" class="errors" /></td>
		</tr>
		<tr>
			<th class="title">입사일자</th>
			<td colspan="5"><form:input path="enpStart" class="form-control"
					type="date" /> <form:errors path="enpStart" class="errors" /></td>
			<th class="title">퇴사일자</th>
			<td colspan="4"><form:input path="resignation.reTreatment"
					class="form-control" type="date" /> <form:errors
					path="resignation.reTreatment" class="errors" /></td>
		</tr>
		<tr>
			<th>대결자</th>
			<td colspan="3"><form:input path="approval.empCd2"
					class="form-control" type="text" /> <form:errors
					path="approval.empCd2" class="errors" /></td>
			<th>시작기간</th>
			<td colspan="3"><form:input path="approval.appStart"
					class="form-control" type="date" /> <form:errors
					path="approval.appStart" class="errors" /></td>
			<th>끝난기간</th>
			<td colspan="3"><form:input path="approval.appEnd"
					class="form-control" type="date" /> <form:errors
					path="approval.appEnd" class="errors" /></td>
		</tr>
		<tr>
			<th rowspan="6">프로필사진<br> <input type="file" name=""
				multiple> <form:errors path="" class="errors" />

			</th>
			<th>성명</th>
			<td colspan="9"><form:input path="empName" class="form-control"
					type="text" /> <form:errors path="empName" class="errors" /></td>
		</tr>
		<tr>
			<th>생년월일</th>
			<td colspan="9"><form:input path="empId1" class="form-control"
					type="text" /> <form:errors path="empId1" class="errors" /></td>
		</tr>
		<tr>
			<th>주소</th>
			<td colspan="9"><form:input path="empAdd1" class="form-control"
					type="text" /> <form:errors path="empAdd1" class="errors" /></td>
		</tr>
		<tr>
			<th>상세주소</th>
			<td colspan="9"><form:input path="empAdd2" class="form-control"
					type="text" /> <form:errors path="empAdd2" class="errors" /></td>
		</tr>
		<tr>
			<th>E-mail</th>
			<td colspan="9"><form:input path="empMail" class="form-control"
					type="text" /> <form:errors path="empMail" class="errors" /></td>
		</tr>
		<tr>
			<th>핸드폰</th>
			<td colspan="9"><form:input path="empHp" class="form-control"
					type="text" /> <form:errors path="empHp" class="errors" /></td>
		</tr>
		<tr>
			<th>담당직무</th>
			<td colspan="4"><form:select path="business.busCd"
					class="form-select">
					<form:option value="" label="업무선택" />
					<form:options items="${busList }" itemLabel="busName"
						itemValue="busCd" />
				</form:select> <form:errors path="business.busName" class="errors" /></td>
			<th>인사발령</th>
			<td colspan="5"><form:input path="" class="form-control"
					type="text" /></td>
		</tr>
		<tr>
			<th rowspan="2">학력사항</th>
			<th colspan="2">학교 명</th>
			<th colspan="2">전 공</th>
			<th colspan="4">기간</th>
			<th colspan="2">졸업여부</th>
		</tr>
		<tr>
			<td colspan="2"><form:input path="uniersity.uniName"
					class="form-control" type="text" /> <form:errors
					path="uniersity.uniName" class="errors" /></td>
			<td colspan="2"><form:input path="uniersity.uniMajor"
					class="form-control" type="text" /> <form:errors
					path="uniersity.uniMajor" class="errors" /></td>
			<td colspan="4"><form:input path="uniersity.uniStart"
					class="form-control" type="date" /> <form:errors
					path="uniersity.uniStart" class="errors" /> ~<form:input
					path="uniersity.uniEnd" class="form-control" type="date" /> <form:errors
					path="uniersity.uniEnd" class="errors" /></td>
			<td colspan="2"><form:input path="state.stateNm"
					class="form-control" type="text" /> <form:errors
					path="state.stateNm" class="errors" /></td>
		</tr>

		<!-- 	가족관계랑 자격증은 가족구성원, 자격증에 따라 행이 추가되야하기에 rowspan은 고정값이 아니다 -->
		<tr>
			<th colspan="11">가족관계</th>
		</tr>
		<tr>
			<th>번호</th>
			<th colspan="1">관계</th>
			<th colspan="3">성명</th>
			<th colspan="3">생년월일</th>
			<th colspan="2">직업</th>
			<th colspan="2">학력</th>
		</tr>
	</table>

	<table id="famInsert">
		<c:forEach items="${famInsert }" var="fam">
			<tr>
				<td></td>
			</tr>
		</c:forEach>
	</table>
	<table>
		<tr>
			<th colspan="11">자격사항</th>
		</tr>
		<tr>
			<th>번호</th>
			<th colspan="3">자격증명</th>
			<th colspan="3">자격증 취득일시</th>
			<th colspan="4">자격증 발급기관</th>
		</tr>
	</table>
	<table>
		<c:forEach items="${famInsert }" var="fam">
			<tr>
				<td></td>
			</tr>
		</c:forEach>
	</table>
	<table>
		<!-- 	경력에 따라서 행 추가 -->
		<tr>
			<th colspan="11">경력사항</th>
		</tr>
		<tr>
			<th>번호</th>
			<th colspan="3">회사명</th>
			<th colspan="3">담당업무</th>
			<th colspan="3">근무개월</th>
		</tr>
	</table>
	<table>
		<c:forEach items="${famInsert }" var="fam">
			<tr>
				<td></td>
			</tr>
		</c:forEach>
	</table>
	<table>
	<tr>
		<th>병역관계</th>
		<th colspan="6"><label>복 무<input type="radio"
				name="empMilitary" value="Y" /></label></th>
		<th colspan="4"><label>미 필<input type="radio"
				name="empMilitary" value="N" /></label></th>
	</tr>
	<tr>
		<td colspan="5">
			<button id="famForm" class="btn btn-secondary" type="button">가족관계추가</button>
			<button id="liForm" class="btn btn-secondary" type="button">자격증추가</button>
			<button id="appForm" class="btn btn-secondary" type="button">경력추가</button>
		</td>
		<td colspan="6" style="text-align: right;"><input
			class="btn btn-primary" type="" value="출력" /> <input
			class="btn btn-success" type="submit" value="저장" /> <input
			class="btn btn-danger" type="reset" value="취소" /></td>
	</tr>
	</table>
</form:form>


<script>
	
</script>
